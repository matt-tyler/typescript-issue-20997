{
    "compilerOptions": {                 
      "target": "es5",
      "module": "commonjs",
      "lib": [
        "es2015",
        "es2016",
        "es2017", 
        "dom.iterable",
        "esnext.asynciterable"
      ],
      "outDir": "./build",
      "rootDir": "./",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true           
    },
    "include": [
      "**/*.ts"
    ],
    "exclude": [
      "node_modules",
      ".build"
    ]
  }